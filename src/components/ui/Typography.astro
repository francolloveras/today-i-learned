---
import type { HTMLTag, Polymorphic } from 'astro/types'

type Props<Tag extends HTMLTag> = Polymorphic<{
  as: Tag
  variant?: keyof typeof variants
}>

const { as: Tag, class: className, variant, ...props } = Astro.props

const variants = {
  icon: 'inline-flex gap-1 items-center',
  title: 'text-2xl md:text-3xl font-semibold',
  sub_title: 'text-sm md:text-lg text-neutral-400'
}

const renderClass = [variants[variant as keyof typeof variants], className]
---

<Tag class:list={renderClass} {...props}>
  <slot />
</Tag>
