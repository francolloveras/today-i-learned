---
interface Props {
  id?: string
  class?: string
}

const { class: customClass, id } = Astro.props
---

<button
  id={id}
  class:list={[
    'rounded-md border border-neutral-600 bg-neutral-800 px-4 py-1.5 transition-colors hover:border-pink-500 hover:bg-pink-400 hover:text-neutral-950',
    customClass
  ]}
>
  <slot />
</button>
